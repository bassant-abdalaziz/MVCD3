@{
    int i = 1;
}

@Html.ActionLink("Add Department","Add","htmlhelper")
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.Name</td>
                <td>@Html.ActionLink("Edit","Edit","htmlhelper",new {Number = item.Number})</td>
                <td>@Html.ActionLink("Delete","Delete","htmlhelper",new {Number = item.Number})</td>
            </tr>
        }
    </tbody>
</table>