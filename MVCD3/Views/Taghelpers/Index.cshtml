@model List<Project>
@{
    int i = 1;
}

<a asp-action="Add" asp-controller="taghelpers">Add Project</a>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Location</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td><a asp-action="Edit" asp-controller="taghelpers" asp-route-id="@item.Number">Edit</a></td>
                <td><a asp-action="Delete" asp-controller="taghelpers" asp-route-id="@item.Number">Delete</a></td>
            </tr>
        }
    </tbody>
</table>