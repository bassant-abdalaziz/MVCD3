<form asp-action="Add" asp-controller="ValidationProj" method="post">

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div>
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <div>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>

    <div>
        <label asp-for="confirmLocation"></label>
        <input asp-for="confirmLocation" class="form-control" />
        <div>
            <span asp-validation-for="confirmLocation" class="text-danger"></span>
        </div>
    </div>


    <input type="submit" value="Add" />
</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>